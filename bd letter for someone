js:
// Surprise and music
document.getElementById('giftButton').onclick = () => {
  document.getElementById('surprise').classList.remove('hidden');
  document.getElementById('song').play();
};

// Floating hearts and flowers
function createFloaty(type) {
  const el = document.createElement('div');
  el.classList.add(type);
  el.style.left = Math.random() * 100 + 'vw';
  el.style.top = '100vh';
  el.style.animation = `float ${4 + Math.random() * 3}s linear infinite`;
  document.body.appendChild(el);
  setTimeout(() => el.remove(), 7000);
}
setInterval(() => createFloaty('heart'), 600);
setInterval(() => createFloaty('flower'), 1000);

// Fireworks
const canvas = document.getElementById("fireworks");
const ctx = canvas.getContext("2d");
canvas.width = window.innerWidth;
canvas.height = window.innerHeight;
window.addEventListener("resize", () => {
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
});
let fireworks = [];
document.addEventListener("click", (e) => {
  for (let i = 0; i < 20; i++) {
    fireworks.push({
      x: e.clientX,
      y: e.clientY,
      radius: 3,
      color: `hsl(${Math.random() * 360}, 100%, 60%)`,
      velocityX: (Math.random() - 0.5) * 10,
      velocityY: (Math.random() - 0.5) * 10,
      alpha: 1
    });
  }
});
function animate() {
  ctx.fillStyle = "rgba(0,0,0,0.1)";
  ctx.fillRect(0, 0, canvas.width, canvas.height);
  fireworks = fireworks.filter(f => f.alpha > 0);
  fireworks.forEach(f => {
    f.x += f.velocityX;""
    f.y += 