<!-- Scripts -->
<script>
  // Matrix rain effect
  const canvas = document.getElementById('matrix');
  const ctx = canvas.getContext('2d');
  canvas.height = window.innerHeight;
  canvas.width = window.innerWidth;
  const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@#$%^&*()";
  const fontSize = 14;
  const columns = canvas.width / fontSize;
  const drops = Array(Math.floor(columns)).fill(1);

  function drawMatrix() {
    ctx.fillStyle = "rgba(0, 0, 0, 0.05)";
    ctx.fillRect(0, 0, canvas.width, canvas.height);
    ctx.fillStyle = "#00FF00";
    ctx.font = fontSize + "px monospace";
    drops.forEach((y, i) => {
      const text = letters.charAt(Math.floor(Math.random() * letters.length));
      ctx.fillText(text, i * fontSize, y * fontSize);
      drops[i] = y * fontSize > canvas.height && Math.random() > 0.975 ? 0 : y + 1;
    });
  }
  setInterval(drawMatrix, 33);
  window.addEventListener('resize', () => {
    canvas.height = window.innerHeight;
    canvas.width = window.innerWidth;
  });

  // Terminal logs with sound
  const logs = [
    "[ACCESS DENIED] Unauthorized access attempt detected...",
    "[TRACE] IP scrambled via multi-proxy chain...",
    "[INJECTING] Payload inserted into memory sector 0xF1...",
    "[CORE BREACH] System lockdown bypassed...",
    "[WARNING] Remote shell activated...",
    "[ALERT] BIOS override initiated...",
    "[STATUS] Kernel process dumping...",
    "[RESPONSE] Threat level: CRITICAL",
    "[LOCKDOWN FAILED] Security protocol interrupted...",
    "[!!] SYSTEM FAILURE — VIRUS DEPLOYED..."
  ];

  const logBox = document.getElementById("logBox");
  const glitchSound = document.getElementById("glitchSound");
  let logIndex = 0;

  function showLogLine() {
    if (logIndex >= logs.length) {
      logIndex = 0;
      logBox.innerText = "";
    }
    logBox.innerText += logs[logIndex] + "\n";
    glitchSound.currentTime = 0;
    glitchSound.play();
    logIndex++;
  }

  // Start log display
  setInterval(showLogLine, 1800);
  window.addEventListener('load', () => {
    glitchSound.play();
  });
</script>

